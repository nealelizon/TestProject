<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:paddingLeft="15dip" android:paddingRight="15dip" android:id="@+id/linearLayout1" android:layout_width="match_parent" android:gravity="center_horizontal" android:layout_height="wrap_content" android:paddingTop="10dip">
        <ImageView android:src="@drawable/hang_uo" android:layout_width="wrap_content" android:id="@+id/imageView1" android:layout_height="wrap_content" android:paddingTop="18dip"></ImageView>
        <TextView android:paddingRight="30dip" android:id="@+id/textView1" android:textSize="38dip" android:textColor="@color/Red" android:paddingLeft="20dip" android:paddingTop="15dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Head"></TextView>
    </LinearLayout>
    <TableLayout android:orientation="horizontal" android:paddingTop="25dip" android:gravity="center_horizontal" android:id="@+id/tableLayout1" android:paddingRight="40dip" android:paddingLeft="40dip" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:layout_weight="1" android:id="@+id/tableRow1" android:gravity="center_horizontal" android:paddingBottom="10dip" android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">
            <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="match_parent" android:text="Block Calls" android:id="@+id/bcalls"></Button>
            <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="match_parent" android:text="Block SMS" android:id="@+id/bsms"></Button>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content">
            <Button android:layout_width="match_parent" android:text="Help" android:layout_height="wrap_content" android:layout_weight="1" android:id="@+id/help"></Button>
            <Button android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="match_parent" android:id="@+id/Exit" android:text="Exit"></Button>
        </TableRow>
    </TableLayout>
    <LinearLayout android:id="@+id/Adds" android:layout_width="match_parent" android:layout_height="wrap_content"></LinearLayout>
</LinearLayout>
